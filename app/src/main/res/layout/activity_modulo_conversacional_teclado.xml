<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModuloConversacional"
    tools:ignore="MissingClass"
    android:orientation="horizontal">
        <Button
            android:id="@+id/botonAjustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="ConfiguraciÃ³n"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="10dp"
            android:background="@drawable/button_rounded"
            android:drawableStart="@drawable/baseline_settings_24"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/botonPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:padding="10dp"
        android:background="@drawable/button_rounded"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/botonRepetir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Repetir"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:padding="10dp"
        android:background="@drawable/button_rounded"
        android:drawableStart="@drawable/baseline_loop_24"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/botonPlayPause"/>

    <ScrollView
        android:id="@+id/scrollViewConversacion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/barra_inferior"
        app:layout_constraintTop_toBottomOf="@id/botonAjustes"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-64dp">
        <LinearLayout
            android:id="@+id/linearLayoutConversacion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/barra_inferior"
            app:layout_constraintTop_toBottomOf="@id/botonAjustes"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="-64dp">

        <ListView
            android:id="@+id/burbujaDialogoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:background="@drawable/outcoming_speech_bubble"
            android:textSize="28dp"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:padding="50dp"
            app:layout_constraintBottom_toTopOf="@id/barra_inferior"
            app:layout_constraintTop_toBottomOf="@id/botonAjustes"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="-64dp" />

        <ListView
            android:id="@+id/burbujaDialogoRobot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text=""
            android:visibility="invisible"
            android:background="@drawable/incoming_speech_bubble"
            android:textSize="28dp"
            android:layout_gravity="start"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="20dp"
            android:padding="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/barra_inferior"
            app:layout_constraintTop_toBottomOf="@id/botonAjustes"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="-64dp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/barra_inferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="10dp">

        <EditText
            android:id="@+id/textoConsulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@android:color/transparent"
            android:hint="Escribe un mensaje..."
            android:inputType="text"
            android:maxLines="6"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/botonHablar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_rounded"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/baseline_mic_24"
            android:text="Hablar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/botonEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded"
            android:layout_marginEnd="110dp"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/baseline_send_24"
            android:text="Enviar"
            android:layout_alignEnd="@id/botonHablar"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>